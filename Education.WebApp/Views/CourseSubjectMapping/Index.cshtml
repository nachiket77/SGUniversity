                    </div>
                </div>

                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        Subject Name:
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-2 xs-details">

                        @Html.EditorFor(model => model.SubjectMaster.SUBJECTNAME, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "25" } })
                        @Html.ValidationMessageFor(model => model.SubjectMaster.SUBJECTNAME, "", new { @class = "text-danger" })

                    </div>

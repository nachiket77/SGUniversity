@model Education.Entity.Admin.Test.AllTestDetails
@{
    ViewBag.Title = "Add Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("AddTestDetails", "TestDetail", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken();
    //   @Html.ValidationSummary();

    <div class="col-xs-12 side-no-pad">

        <div class="col-xs-12 side-no-pad mr-top-10">
            <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                Course
            </div>
            <div class="col-xs-12 col-sm-3">

                @*@Html.DropDownListFor(m => m.CourseMaster.NAME, new SelectList(Model.CourseList, "ID", "NAME"), "  -----Select Course-----  ")*@
                @Html.DropDownListFor(model => model.CourseMaster.ID, new SelectList(Model.CourseList, "ID", "NAME"), "Please select")
            </div>
        </div>
        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">
                Subject
            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details" style="width:20%;height:20%">

                @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                @Html.DropDownListFor(model => model.SubjectMaster.SUBJECTID, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "Please select")
            </div>
        </div>

        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">
                QuestionType
            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details" style="width:20%;height:20%">

                @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                @Html.DropDownListFor(model => model.QuestionTypeMaster.QUESTIONTYPEID, new SelectList(Model.QuestionTypeList, "QUESTIONTYPEID", "TYPENAME"), "Please select")
            </div>
        </div>

        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">
                TestType
            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details" style="width:20%;height:20%">

                @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                @Html.DropDownListFor(model => model.TestTypeMaster.TESTTYPEID, new SelectList(Model.TestTypeList, "TESTTYPEID", "TESTTYPENAME"), "Please select")
            </div>
        </div>

        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">
                TITLE:
            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details">
                @*<input type="email" class="form-control" placeholder="First Name">*@
                @Html.EditorFor(model => model.TestDetails.TITLE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestDetails.TITLE, "", new { @class = "text-danger" })


            </div>

        </div>

        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">
                Upload Excel File:
            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details" style="width:20%">
                <input type="file" class="form-control" name="uploadfile" id="uploadfile" />

            </div>
        </div>

        <div class="col-xs-12 side-no-pad mr-top-10 xs-details">
            <div class="col-xs-12 col-md-2 side-no-pad pad7 wh">

            </div>
            <div class="col-xs-12 col-sm-3 col-md-2 xs-details" style="width:20%">

                <input type="submit" value="AddTestDetails" class="btn btn-default" />
            </div>
        </div>

    </div>

        @*<label class="text-info">Upload Excel File</label>
            <input type="file" class="form-control" name="uploadfile" id="uploadfile" />
            <input type="submit" value="submit" class="btn btn-default" />*@
}

@model Education.Entity.Admin.Test.AllTestDetails
@{
    ViewBag.Title = "Add Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
@*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
<link href="~/assets/css/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<script src="https://code.jquery.com/jquery-latest.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-latest.min.js"
        type="text/javascript"></script>
<div class="col-xs-12 Addstudent-bg white-color">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 pad-top-20">
        @using (Html.BeginForm("AddTestDetails", "TestDetail", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
           
            @Html.AntiForgeryToken();
            //   @Html.ValidationSummary();
           

            <div class="col-xs-12 side-no-pad">
                <br />
                @if (TempData["Success"] != null)
                {
                    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                }
                @if (TempData["Error"] != null)
                {
                    <p class="alert alert-danger" id="successMessage">@TempData["Error"]</p>
                }
                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        Course
                    </div>
                    <div class="col-xs-12 col-sm-3">

                        @*@Html.DropDownListFor(m => m.CourseMaster.NAME, new SelectList(Model.CourseList, "ID", "NAME"), "  -----Select Course-----  ")*@
                        @Html.DropDownListFor(model => model.CourseMaster.ID, new SelectList(Model.CourseList, "ID", "NAME"), "Please select", new {  @class = "form-control" })
                    </div>
                </div>
                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        Subject
                    </div>
                    <div class="col-xs-12 col-sm-3">

                        @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                        @Html.DropDownListFor(model => model.SubjectMaster.SUBJECTID, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "Please select", new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        QuestionType
                    </div>
                    <div class="col-xs-12 col-sm-3">

                        @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                        @Html.DropDownListFor(model => model.QuestionTypeMaster.QUESTIONTYPEID, new SelectList(Model.QuestionTypeList, "QUESTIONTYPEID", "TYPENAME"), "Please select", new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        TestType
                    </div>
                    <div class="col-xs-12 col-sm-3">

                        @*@Html.DropDownListFor(model => model.SubjectMaster.SUBJECTNAME, new SelectList(Model.SubjectList, "SUBJECTID", "SUBJECTNAME"), "  -----Select Subject-----  ")*@
                        @Html.DropDownListFor(model => model.TestTypeMaster.TESTTYPEID, new SelectList(Model.TestTypeList, "TESTTYPEID", "TESTTYPENAME"), "Please select",new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        TITLE:
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        @*<input type="email" class="form-control" placeholder="First Name">*@
                        @Html.EditorFor(model => model.TestDetails.TITLE, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.TestDetails.TITLE, "", new { @class = "text-danger" })


                    </div>

                </div>

                <div class="col-xs-12 side-no-pad mr-top-10">
                    <div class="col-xs-12 col-sm-2 side-no-pad pad7 xs-details">
                        Upload Excel File:
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <input type="file" class="form-control" name="uploadfile" id="uploadfile" />

                    </div>
                </div>

                <div class="col-xs-12 side-no-pad add-btn row">
                  
                    <div class="col-xs-12 col-sm-3">

                        <input type="submit" class="btn btn-sucesss" value="AddTestDetails" style="background-color:dodgerblue" />
                    </div>
                </div>

            </div>

            @*<label class="text-info">Upload Excel File</label>
                <input type="file" class="form-control" name="uploadfile" id="uploadfile" />
                <input type="submit" value="submit" class="btn btn-default" />*@
        }
    </div>
</div>

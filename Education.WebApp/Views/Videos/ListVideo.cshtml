@model Education.Entity.Admin.Videos.AllVideosDetails
@{
    ViewBag.Title = "ListVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
